{% extends 'base.html.twig' %}

{% block title %}Tipico Simulators{% endblock %}

{% block body %}


    <div class="table-container">
        <table class="styled-table">
            <thead>
            <tr>
                <th>Id</th>
                <th>Ident</th>
                <th>Cashbox</th>
                <th>Cashbox change</th>
                <th>Bets</th>
            </tr>
            </thead>
            <tbody>
            {% for simulator in simulators %}
                <tr>
                    <td>{{ simulator.id }}</td>
                    <td><a href="{{ path('app_tipico_simulation_placements', {simulator: simulator.id}) }}">{{ simulator.identifier }}</a></td>
                    <td>{{ simulator.cashBox }}</td>

                    <td>{{ render_chart(cashBoxCharts[loop.index-1]) }}</td>
                    <td>{{ render_chart(betOutcomeCharts[loop.index-1]) }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
