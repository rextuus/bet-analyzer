            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-dark px-1">
        <div class="container-fluid">
            <a class="navbar-brand" href="{{ path('app_login') }}">
                <p class="pl-2 d-inline font-weight-bold" style="color: #444;">BetAnalyzer</p>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbar-collapsable"
                    aria-controls="navbarTogglerDemo01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbar-collapsable">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                </ul>
                <a class="nav-link text-black-50" href="{{ path('app_login') }}">Log In</a>
                <a href="#" class="btn btn-dark">Sign up</a>
            </div>
        </div>
    </nav>
    {% block body %}{% endblock %}
    <footer class="mt-5 p-3 text-center">
        WH-Company
    </footer>
    </body>
