{% extends 'base.html.twig' %}

{% block title %}Hello SimulatorController!{% endblock %}

{% block body %}
    <div class="favorite-listing">
        {% for list in lists %}
            <div class="favorite">
                <div class="ident">
                    <a href="{{ path('app_favorite_detail', {simulatorFavoriteList: list.id}) }}">{{ list.identifier }}</a>
                </div>
                <div class="created">
                    {{ list.created|date('d-m-Y') }}
                </div>
                <div class="bets">
                    {{ nextPlacements[loop.index - 1] }}/{{ betsToday[loop.index - 1] }}
                </div>
                <div class="cashbox">
                    {{ balanceToday[loop.index - 1] }}â‚¬
                </div>
                <div class="simulators">
                    {% for simulator in list.simulators %}
                        <div class="link"><a href="{{ path('app_tipico_simulation_detail', {simulator: simulator.id}) }}">{{ simulator.identifier }}</a></div>
                    {% endfor %}
                </div>
            </div>
        {% endfor %}
    </div>

{% endblock %}
